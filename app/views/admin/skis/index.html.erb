<h2>Ski Bazaar</h2>
<h4>The marketplace for wintersports gear</h4>
<%= link_to "Add Ski", new_admin_ski_path %>
<p>
<% @skis.each do |ski| %>
  <%= link_to "#{ski.brand}: #{ski.name}", ski_path(ski) %></br>
  <%= link_to "Edit", edit_admin_ski_path(ski) %> |
  <%= link_to "Delete", ski_path(ski), method: :delete %>
</br>
</br>
<% end %>
</p>
