<body class='login-page'>

<div class="col-sm-8 col-sm-offset-4">
<h2>Welcome Ski Bazaar</h2>

<%= form_for(:session, url: login_path) do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %></br>
  <%= f.label :password %>
  <%= f.text_field :password %>
</br>

  <%= f.submit "Login"%>
<% end %>

</div>
</body>
