<div class="form-horizontal">
  <%= form_for(:session, url: login_path) do |f| %>
    <div class="form-group">
      <%= f.label :username, {:class => "col-sm-2 control-label"} %>
      <div class="col-sm-2">
        <%= f.text_field :username, {:class => "form-control", :id => "exampleInputName2"} %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, {:class => 'col-sm-2 control-label'}%>
      <div class="col-sm-2">
        <%= f.password_field :password, {:class => "form-control", :id => "inputPassword3"} %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Login", {:class => "btn btn-default"} %>
      </div>
    </div>
  <% end %>
</div>
